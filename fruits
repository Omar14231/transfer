-- ğŸ¯ Ø¹Ø±Ø¶ Ø¥Ø´Ø¹Ø§Ø± Ø§Ù„ØµÙŠØ§Ù†Ø©
local function showMaintenanceNotification()
    mainFrame.Visible = true
    
    -- ØªØ£Ø«ÙŠØ± Ø§Ù„Ø¸Ù‡ÙˆØ±
    mainFrame.Position = UDim2.new(0.5, -200, 0.5, 300)
    mainFrame.BackgroundTransparency = 1
    
    TweenService:Create(mainFrame, TweenInfo.new(0.7, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
        Position = UDim2.new(0.5, -200, 0.5, -100),
        BackgroundTransparency = 0.1
    }):Play()
    
    -- ØªØ£Ø«ÙŠØ± ØªÙˆÙ‡Ø¬ Ø§Ù„Ø°Ù‡Ø¨
    spawn(function()
        while mainFrame.Visible do
            TweenService:Create(mainStroke, TweenInfo.new(1.5), {
                Color = Color3.fromRGB(255, 255, 100)
            }):Play()
            wait(1.5)
            TweenService:Create(mainStroke, TweenInfo.new(1.5), {
                Color = Color3.fromRGB(255, 215, 0)
            }):Play()
            wait(1.5)
        end
    end)
end

-- ğŸ¯ Ø¥Ø®ÙØ§Ø¡ Ø§Ù„Ø¥Ø´Ø¹Ø§Ø±
local function hideMaintenanceNotification()
    TweenService:Create(mainFrame, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.In), {
        Position = UDim2.new(0.5, -200, 0.5, 300),
        BackgroundTransparency = 1
    }):Play()
    
    wait(0.5)
    mainFrame.Visible = false
end

