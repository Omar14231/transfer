function sendMessage(sender, message)
    if string.len(message) == 0 or string.len(message) > MAX_MESSAGE_LENGTH then
        return
    end
    
    -- ØªÙ†Ø¸ÙŠÙ Ø§Ù„Ù†Øµ Ù…Ù† Ø§Ù„Ø±Ù…ÙˆØ² Ø§Ù„Ø®Ø·ÙŠØ±Ø©
