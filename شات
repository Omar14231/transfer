    if not guiData then return end
    
    local scrollFrame = guiData.ScrollFrame
    scrollFrame:ClearAllChildren()
    
    -- Ø¹Ø±Ø¶ Ø§Ù„Ø±Ø³Ø§Ø¦Ù„ Ù…Ù† Ø§Ù„Ø£Ù‚Ø¯Ù… Ø¥Ù„Ù‰ Ø§Ù„Ø£Ø­Ø¯Ø« (Ù…Ø¶Ø¨ÙˆØ·)
