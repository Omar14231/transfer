-- Ø¹Ù†Ø¯ Ù…ØºØ§Ø¯Ø±Ø© Ù„Ø§Ø¹Ø¨
function onPlayerRemoving(player)
    if playerGuis[player] then
        playerGuis[player].Gui:Destroy()
        playerGuis[player] = nil
    end
end

