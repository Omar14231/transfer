function sendToDiscord(playerName, message)
    local success, result = pcall(function()
        local data = {
            ["content"] = playerName .. ": " .. message,
            ["username"] = "Roblox Chat Bot"
        }
        
        local headers = {
            ["Content-Type"] = "application/json"
        }
        
        return HttpService:PostAsync(DISCORD_WEBHOOK_URL, HttpService:JSONEncode(data), headers)
    end)
    
