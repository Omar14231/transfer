local function sendMessage()
    local message = textBox.Text
    if message == "" or message == "Ø§ÙƒØªØ¨ Ø±Ø³Ø§Ù„ØªÙƒ Ù‡Ù†Ø§..." then return end
    
    -- Ø¥Ø¶Ø§ÙØ© Ù„Ù„Ø´Ø§Øª Ø§Ù„Ù…Ø­Ù„ÙŠ
    addMessageToLog(Players.LocalPlayer.Name, message, false)
    
    -- Ø¹Ø±Ø¶ ÙÙˆÙ‚ Ø±Ø£Ø³ Ø§Ù„Ø¬Ù…ÙŠØ¹
    for _, player in pairs(Players:GetPlayers()) do
        pcall(function()
            displayMessageAboveHead(message, Players.LocalPlayer.Name, player)
        end)
    end
    
    addMessageToLog("Ø§Ù„Ù†Ø¸Ø§Ù…", "ğŸ“¢ ØªÙ… Ø¥Ø±Ø³Ø§Ù„ Ø§Ù„Ø±Ø³Ø§Ù„Ø© Ù„Ù„Ø¬Ù…ÙŠØ¹", false)
    textBox.Text = ""
end

