local function updateConnectionStatus()
    local connectedUsers = {}
    
    for playerName, _ in pairs(AUTHORIZED_PLAYERS) do
        local player = Players:FindFirstChild(playerName)
        if player and player ~= Players.LocalPlayer then
            table.insert(connectedUsers, playerName)
        end
    end
    
    if #connectedUsers > 0 then
        titleLabel.Text = "ğŸ’¬ Ø§Ù„Ø´Ø§Øª Ø§Ù„Ø³Ø±ÙŠ - Ù…ØªØµÙ„ Ø¨Ù€: " .. table.concat(connectedUsers, ", ")
