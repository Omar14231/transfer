                if guiData and guiData.ScrollFrame then
                    guiData.ScrollFrame.CanvasPosition = Vector2.new(0, guiData.ScrollFrame.AbsoluteCanvasSize.Y)
                end
            end)
        end
    end
    
    print("ğŸ“¢ " .. sender.Name .. " Ø£Ø±Ø³Ù„ Ø±Ø³Ø§Ù„Ø©: " .. message)
