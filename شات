-- ÙˆØ¸ÙŠÙØ© Ø¥Ø²Ø§Ù„Ø© Ø²Ø± Ø¥Ø¸Ù‡Ø§Ø± Ø§Ù„Ø´Ø§Øª
function removeShowChatButton(player)
    local guiData = playerGuis[player]
    if guiData and guiData.ShowButton then
        guiData.ShowButton:Destroy()
        guiData.ShowButton = nil
    end
end

