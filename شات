-- ÙˆØ¸ÙŠÙØ© Ø¥Ø±Ø³Ø§Ù„ Ø±Ø³Ø§Ù„Ø©
function sendMessage(sender, message)
    if string.len(message) == 0 or string.len(message) > MAX_MESSAGE_LENGTH then
        return
    end
    
    -- ØªÙ†Ø¸ÙŠÙ Ø§Ù„Ù†Øµ Ù…Ù† Ø§Ù„Ø±Ù…ÙˆØ² Ø§Ù„Ø®Ø·ÙŠØ±Ø©
    message = string.gsub(message, "[<>]", "")
    
    -- Ø¥Ø¶Ø§ÙØ© Ø§Ù„Ø±Ø³Ø§Ù„Ø© Ù„Ù„Ø·Ù„Ø§Ø¨ (Ø§Ù„Ø±Ø³Ø§Ù„Ø© Ø§Ù„Ø¬Ø¯ÙŠØ¯Ø© ÙÙŠ Ø§Ù„Ù†Ù‡Ø§ÙŠØ©)
    table.insert(chatMessages, {
        Player = sender,
        Message = message,
        Timestamp = os.time()
    })
    
    -- Ø¹Ø±Ø¶ Ø§Ù„Ø±Ø³Ø§Ù„Ø© ÙÙˆÙ‚ Ø±Ø£Ø³ Ø§Ù„Ù…Ø±Ø³Ù„
    showMessageAboveHead(sender, message)
    
    -- ØªØ­Ø¯ÙŠØ« ÙˆØ§Ø¬Ù‡Ø§Øª Ø¬Ù…ÙŠØ¹ Ø§Ù„Ù„Ø§Ø¹Ø¨ÙŠÙ†
    updateAllChatGuis()
    
    -- Ø¨Ø« Ø§Ù„Ø±Ø³Ø§Ù„Ø© Ù„Ø¬Ù…ÙŠØ¹ Ø§Ù„Ù„Ø§Ø¹Ø¨ÙŠÙ†
    for _, player in pairs(Players:GetPlayers()) do
        if player ~= sender then
            showMessageAboveHead(sender, message)
        end
    end
end

